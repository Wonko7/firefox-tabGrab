{
  "manifest_version": 2,
  "name": "tabGrab",
  "version": "1.0",

  "description": "Grabs tabs",

  "icons": {
    "48": "icons/binoculars.png"
  },

  "permissions": [
    "tabs",
    "notifications",
    "activeTab"
  ],

  "background": {
    "scripts": ["src/tabGrab.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/grabUi.js"]
    }
  ],

  "commands": {
    "grab-up": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "grab up"
    },
    "grab-down": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "grab down"
    }
  }
}
